.landing-banner {
    clearfix();

    background: color-dark-gray;
    background-size: 60px 60px;
    padding: 30px 0;

    .landing-about {
        box-sizing: border-box;
        color: #fff;
        display: inline-block;
        padding: 10px;
        vertical-align: middle;
        width: 50%;

        .about-large {
            font-size: 70px;
            margin-bottom: 10px;
        }

        .about-small {
            font-size: 22px;
        }
    }

    .landing-signup {
        box-sizing: border-box;
        display: inline-block;
        margin: 0 auto;
        padding: 10px;
        vertical-align: middle;
        width: 50%;
    }

    input {
        display: block;
        font-size: 17px;
        margin-bottom: 8px;
        height: 52px;
        width: 100%;
    }

    button {
        base-button(color-blue);

        float: right;
        font-size: 17px;
        height: 52px;
        width: 100%;
    }
}
